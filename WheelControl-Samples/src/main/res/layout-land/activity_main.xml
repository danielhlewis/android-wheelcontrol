<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.danielhlewis.wheelcontrol.samples.MainActivity"
    tools:ignore="MergeRootFrame">

    <fragment
        android:id="@+id/wheelFragment"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        class="com.danielhlewis.wheelcontrol.samples.MainActivity$WheelFragment" />

    <fragment
        android:id="@+id/optionsFragment"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        class="com.danielhlewis.wheelcontrol.samples.MainActivity$OptionsFragment" />

</LinearLayout>

